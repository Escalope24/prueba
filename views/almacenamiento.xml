<odoo>
    <record id="almacenamienot_action" model="ir.actions.act_window">
        <field name="name">almacenmiento</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hdd</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="almacenamiento_view_form" model="ir.ui.view">
        <field name="name">almacenamiento</field>
        <field name="model">almacenamiento</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="marca" />
                        <field name="modelo" />
                        <field name="tipo" />
                        <field name="caracteristicas" />
                        <field name="espacio" />
                        <field name="imagen" />
                        <field name="rpm" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>